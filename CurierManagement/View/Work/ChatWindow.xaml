<Window x:Class="CurierManagement.View.Work.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurierManagement.View.Work"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" Title="Тест чату - SignalR" 
        Height="650" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок з інформацією про користувача -->
        <Border Grid.Row="0" 
                Background="#E3F2FD" 
                Padding="10" 
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Тест чату між двома ПК" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#1976D2"/>
                <TextBlock Text="{Binding UserInfoText}" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"
                           Foreground="#424242"/>
                <TextBlock Text="{Binding ConnectionStatus}" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Foreground="{Binding StatusColor}"
                           FontWeight="Bold"
                           Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Область повідомлень -->
        <Border Grid.Row="2" 
                BorderBrush="#BDBDBD" 
                BorderThickness="1" 
                CornerRadius="5">
            <ScrollViewer x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Background="White">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" 
                                    Padding="8" 
                                    Background="{Binding BackgroundColor}"
                                    CornerRadius="10"
                                    HorizontalAlignment="{Binding Alignment}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Header}" 
                                               FontSize="11" 
                                               FontWeight="Bold"
                                               Foreground="#666666"
                                               Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding Text}" 
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               Foreground="Black"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Поле введення повідомлення -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageTextBox"
                     Grid.Column="0"
                     Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     VerticalContentAlignment="Center"
                     Padding="10"
                     FontSize="14"
                     AcceptsReturn="False">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="2"
                    Content="Відправити"
                    Command="{Binding SendMessageCommand}"
                    Width="100"
                    Height="40"
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>
        </Grid>

        <!-- Додаткові кнопки -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <Button Content="Очистити чат"
                    Command="{Binding ClearChatCommand}"
                    Width="120" 
                    Height="30"
                    FontSize="12"
                    Background="#FF9800"
                    Foreground="White"
                    Margin="5"/>

            <Button Content="Назад до налаштувань"
                    Command="{Binding BackToSettingsCommand}"
                    Width="150" 
                    Height="30"
                    FontSize="12"
                    Background="#607D8B"
                    Foreground="White"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
