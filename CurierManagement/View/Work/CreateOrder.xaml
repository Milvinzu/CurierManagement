<Page x:Class="CurierManagement.View.Work.CreateOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CurierManagement.View.Work"
      xmlns:convert="clr-namespace:CurierManagement.Convert"
      xmlns:model="clr-namespace:CurierManagement.Model"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Управління замовленнями"
      Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <Style x:Key="TodayOrderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Opacity" Value="0.3"/>
        </Style>

        <Style x:Key="PendingOrderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Opacity" Value="0.2"/>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="📦 Управління замовленнями" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="{StaticResource PrimaryTextBrush}"
                      VerticalAlignment="Center"/>

            <Border Background="{StaticResource SuccessBrush}" 
                   CornerRadius="15" 
                   Padding="10,5" 
                   Margin="20,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📈" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding FilteredOrders.Count, StringFormat='Всього: {0}'}" 
                              Foreground="White" 
                              FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="0" 
               Background="{StaticResource SurfaceBrush}" 
               CornerRadius="10" 
               BorderBrush="{StaticResource BorderBrush}" 
               BorderThickness="1"
               Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="📋 Список замовлень" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource PrimaryTextBrush}"/>

                    <Button Grid.Column="1" 
                           Content="🔄 Оновити" 
                           Style="{StaticResource SecondaryButtonStyle}" 
                           Command="{Binding LoadOrdersCommand}"/>
                </Grid>

                <TextBox Grid.Row="1" 
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                        Style="{StaticResource InputTextBoxStyle}"
                        Margin="0,0,0,15">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}" 
                                   BorderBrush="{TemplateBinding BorderBrush}" 
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                              Text="🔍" 
                                              FontSize="16" 
                                              Margin="10,8,5,8" 
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <ScrollViewer Grid.Column="1" 
                                                 x:Name="PART_ContentHost" 
                                                 Margin="5,8,10,8"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="Пошук по номеру, імені або адресі..." 
                                              FontStyle="Italic" 
                                              Foreground="{StaticResource SecondaryTextBrush}"
                                              Margin="5,8,10,8"
                                              IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=PART_ContentHost}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <ListView Grid.Row="2" 
                         ItemsSource="{Binding FilteredOrders}" 
                         SelectedItem="{Binding SelectedOrder}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5" Padding="15" CornerRadius="8" Background="{StaticResource SurfaceBrush}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OrderDate, Converter={x:Static convert:DateConverter.Instance}}" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                <Setter Property="Background" Value="#FFF8E1"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding DataContext.OrderDoubleClickCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                                              CommandParameter="{Binding}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                           Background="{Binding Status, Converter={x:Static convert:StatusColorConverter.Instance}}" 
                                           CornerRadius="15" 
                                           Width="30" Height="30" 
                                           Margin="0,0,15,0">
                                        <TextBlock Text="{Binding Status, Converter={x:Static convert:StatusIconConverter.Instance}}" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  Foreground="White" 
                                                  FontSize="14"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="📦" FontSize="14" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding OrderNumber}" 
                                                      FontWeight="Bold" 
                                                      FontSize="16" 
                                                      Foreground="{StaticResource PrimaryTextBrush}"/>

                                            <Border Background="{StaticResource SuccessBrush}" 
                                                   CornerRadius="10" 
                                                   Padding="8,3" 
                                                   Margin="10,0,0,0"
                                                   Visibility="{Binding OrderDate, Converter={x:Static convert:TodayVisibilityConverter.Instance}}">
                                                <TextBlock Text="СЬОГОДНІ" 
                                                          Foreground="White" 
                                                          FontSize="10" 
                                                          FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <TextBlock Text="👤" FontSize="12" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding CustomerName}" 
                                                      FontSize="14" 
                                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <TextBlock Text="📍" FontSize="12" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding DeliveryAddress}" 
                                                      FontSize="12" 
                                                      Foreground="{StaticResource SecondaryTextBrush}" 
                                                      TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🕐" FontSize="12" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding OrderDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                                      FontSize="12" 
                                                      Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding TotalAmount, Converter={x:Static convert:CurrencyConverter.Instance}}" 
                                                  FontSize="16" 
                                                  FontWeight="Bold" 
                                                  Foreground="{StaticResource SuccessBrush}" 
                                                  HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding Status}" 
                                                  FontSize="12" 
                                                  Foreground="{StaticResource SecondaryTextBrush}" 
                                                  HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="3" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,0">
                    <Button Content="✏️ Редагувати" 
                           Style="{StaticResource PrimaryButtonStyle}" 
                           Command="{Binding EditOrderCommand}"
                           IsEnabled="{Binding SelectedOrder, Converter={x:Static convert:NullToBoolConverter.Instance}}"
                           Margin="0,0,10,0"/>
                    <Button Content="🗑️ Видалити" 
                           Style="{StaticResource DangerButtonStyle}" 
                           Command="{Binding DeleteOrderCommand}"
                           IsEnabled="{Binding SelectedOrder, Converter={x:Static convert:NullToBoolConverter.Instance}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" 
               Background="{StaticResource SurfaceBrush}" 
               CornerRadius="10" 
               BorderBrush="{StaticResource BorderBrush}" 
               BorderThickness="1"
               Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="{Binding IsEditMode, Converter={x:Static convert:EditModeConverter.Instance}}" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource PrimaryTextBrush}"
                              Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Номер замовлення *" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding OrderNumber, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Ім'я клієнта *" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Адреса доставки *" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding DeliveryAddress, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"
                                    Height="60"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Під'їзд" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding Entryway}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Дата та час замовлення" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Дата" 
                                              FontSize="12" 
                                              Margin="0,0,0,3" 
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <DatePicker SelectedDate="{Binding OrderDate}" 
                                               FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Час" 
                                              FontSize="12" 
                                              Margin="0,0,0,3" 
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBox Text="{Binding OrderTime, StringFormat='hh\\:mm'}" 
                                            Style="{StaticResource InputTextBoxStyle}"
                                            ToolTip="Формат: ГГ:ХХ (наприклад, 14:30)"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Сума замовлення (₴)" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding TotalAmount, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"
                                    ToolTip="Введіть суму в гривнях"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Статус" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <ComboBox SelectedItem="{Binding Status}" 
                                     FontSize="14" 
                                     Padding="10,8">
                                <ComboBox.ItemsSource>
                                    <x:Array Type="model:OrderStatus">
                                        <model:OrderStatus>Pending</model:OrderStatus>
                                        <model:OrderStatus>Accepted</model:OrderStatus>
                                        <model:OrderStatus>InDelivery</model:OrderStatus>
                                        <model:OrderStatus>Delivered</model:OrderStatus>
                                        <model:OrderStatus>Canceled</model:OrderStatus>
                                    </x:Array>
                                </ComboBox.ItemsSource>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Створено користувачем" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding CreatedBy}" 
                                    Style="{StaticResource InputTextBoxStyle}"
                                    IsReadOnly="True"
                                    Background="{StaticResource BackgroundBrush}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="🗺️ Локація на карті" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,5" 
                                      Foreground="{StaticResource PrimaryTextBrush}"/>

                            <StackPanel Orientation="Horizontal">
                                <Button Content="📍 Обрати на карті" 
                                       Style="{StaticResource SecondaryButtonStyle}" 
                                       Command="{Binding ShowMapCommand}"
                                       Margin="0,0,10,0"/>

                                <Button Content="🔗 Відкрити карту" 
                                       Style="{StaticResource SecondaryButtonStyle}" 
                                       Command="{Binding OpenMapLocationCommand}"
                                       IsEnabled="{Binding HasMapLocation}"/>
                            </StackPanel>

                            <TextBlock Text="{Binding WebAddressInMap}" 
                                      FontSize="10" 
                                      Foreground="{StaticResource SecondaryTextBrush}" 
                                      TextTrimming="CharacterEllipsis"
                                      Margin="0,5,0,0"
                                      Visibility="{Binding HasMapLocation, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="2" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Margin="0,30,0,0">
                        <Button Content="{Binding IsEditMode, Converter={x:Static convert:SaveButtonConverter.Instance}}" 
                               Style="{StaticResource PrimaryButtonStyle}" 
                               Command="{Binding SaveOrderCommand}"
                               Margin="0,0,10,0"/>
                        <Button Content="🆕 Новий" 
                               Style="{StaticResource SecondaryButtonStyle}" 
                               Command="{Binding NewOrderCommand}"
                               Margin="0,0,10,0"/>
                        <Button Content="❌ Скасувати" 
                               Style="{StaticResource SecondaryButtonStyle}" 
                               Command="{Binding CancelEditCommand}"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>